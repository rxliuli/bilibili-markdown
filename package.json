{
  "name": "bilibili-markdown",
  "description": "为 bilibili 专栏的新版编辑器增加粘贴 markdown 的功能，将 markdown 内容导入到专栏的编辑器中",
  "private": true,
  "version": "0.3.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "postinstall": "wxt prepare"
  },
  "devDependencies": {
    "@tsconfig/svelte": "^5.0.4",
    "@types/mdast": "^4.0.4",
    "@wxt-dev/module-svelte": "^2.0.2",
    "autoprefixer": "^10.4.20",
    "markdown-to-quill-delta": "file:libs/markdown-to-quill-delta-0.8.0.tgz",
    "mdast-util-gfm": "^3.0.0",
    "micromark-extension-gfm": "^3.0.0",
    "postcss": "^8.4.49",
    "quill": "^2.0.3",
    "svelte": "^5.15.0",
    "svelte-check": "^4.1.1",
    "tailwindcss": "^3.4.17",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wxt": "^0.19.22"
  },
  "dependencies": {
    "@liuli-util/async": "^3.7.0",
    "mdast-util-from-markdown": "^2.0.2",
    "mdast-util-to-markdown": "^2.1.2",
    "mdast-util-to-string": "^4.0.0",
    "serialize-error": "^11.0.3",
    "unist-util-select": "^5.1.0"
  }
}
